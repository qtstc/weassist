<UserControl x:Class="CitySafe.SettingsTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="200">


    <StackPanel Width="200" Background="#FF7C2833" Height="200">
        <TextBlock x:Name="locationEnabledTextBlock" TextWrapping="Wrap"  HorizontalAlignment="Left"  Margin="12,12,0,0" Foreground="#DEFFFFFF" FontSize="16"/>
        <TextBlock x:Name="notificationTextBlock"  TextWrapping="Wrap" HorizontalAlignment="Left" Margin="12,0,0,0" FlowDirection="RightToLeft" Foreground="#DEFFFFFF" FontSize="16"/>
        <Image Source="/Assets/InAppTiles/setting.png"  Margin="-90, 24, 0, 0" Width="120" Height="120"/>
        <TextBlock  Margin="90,-48,0,0" FontFamily="Segoe UI" FontSize="26" Text="{Binding LocalizedResources.SOS_Setting, Mode=OneWay, Source={StaticResource LocalizedStrings}}" Foreground="#DEFFFFFF"/>
    </StackPanel>
</UserControl>